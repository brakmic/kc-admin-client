  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "commit-and-tag-version": "^11.2.1",
    "esbuild": "^0.18.0",
    "husky": "^8.0.3"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^21.1.1"
  },
  "files": [
